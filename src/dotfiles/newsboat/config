# -- Navigation ----------------------------------------------------------------

#include "~/.newsboat/binds"

goto-next-feed no

bind-key j down
bind-key k up
bind-key RIGHT open
bind-key LEFT quit
bind-key n next articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
